<% layout('layouts/boilerplate') %>
    <div class="align-self-center mx-auto">
        <div class="shadow p-3 bg-body rounded">
            <form action="/campgrounds" method="POST">
                <div class="mb-2">
                    <label for="title">Title:</label>
                    <input type="text" id="title" name="campground[title]" class="form-control" placeholder="Username">
                </div>
                <div class="mb-2">
                    <label for="image">Image:</label>
                    <input type="text" id="image" name="campground[image]" class="form-control" placeholder="image">
                </div>
                <div class="mb-2">
                    <label for="price">Price:</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input type="text" id="price" name="campground[price]" class="form-control" placeholder="price">
                    </div>
                </div>
                <div class="mb-2">
                    <label for="location">Location:</label>
                    <input type="text" id="location" name="campground[location]" class="form-control"
                        placeholder="location">
                </div>
                <div class="">
                    <label for="description">Description:</label>
                    <textarea id="description" name="campground[description]" class="form-control"
                        placeholder="description"></textarea>
                </div>
                <div class="text-center mt-3">
                    <button class="btn btn-primary" type="submit">Add Campground</button>
                </div>
            </form>
        </div>
    </div>


