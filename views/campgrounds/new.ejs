<% layout('layouts/boilerplate') %>
    <div class="container px-3 py-2 my-auto shadow rounded" style="max-width:420px;">
        <form action="/campgrounds" method="POST" class="needs-validation" novalidate>
            <div class="mb-2">
                <label for="title">Title:</label>
                <input type="text" id="title" name="campground[title]" class="form-control" placeholder="Username"
                    required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-2">
                <label for="image">Image:</label>
                <input type="text" id="image" name="campground[image]" class="form-control" placeholder="image"
                    required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-2">
                <label for="price">Price:</label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input type="text" id="price" name="campground[price]" class="form-control" placeholder="price"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
            </div>
            <div class="mb-2">
                <label for="location">Location:</label>
                <input type="text" id="location" name="campground[location]" class="form-control" placeholder="location"
                    required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="">
                <label for="description">Description:</label>
                <textarea id="description" name="campground[description]" class="form-control" placeholder="description"
                    required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="text-center mt-2 ">
                <button class="btn btn-primary" type="submit">Add Campground</button>
            </div>
        </form>
    </div>


