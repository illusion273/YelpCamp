<% layout('layouts/boilerplate') %>
    <div class="align-self-center mx-auto">
        <div class="shadow p-3 bg-body rounded">
            <form action="/campgrounds/<%= campground.id %>?_method=PUT" method="POST" class="needs-validation" novalidate>
                <div class="mb-2">
                    <label for="title">Title:</label>
                    <input type="text" id="title" name="campground[title]" class="form-control" placeholder="Title"
                        value="<%= campground.title %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-2">
                    <label for="image">Image:</label>
                    <input type="text" id="image" name="campground[image]" class="form-control" placeholder="image"
                        value="<%= campground.image %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-2">
                    <label for="price">Price:</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input type="text" id="price" name="campground[price]" class="form-control" placeholder="price"
                            value="<%= campground.price %>" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                </div>
                <div class="mb-2">
                    <label for="location">Location:</label>
                    <input type="text" id="location" name="campground[location]" class="form-control"
                        placeholder="location" value="<%= campground.location %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="">
                    <label for="description">Description:</label>
                    <textarea id="description" name="campground[description]" class="form-control"
                        placeholder="description" required><%= campground.description %></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="text-center mt-3">
                    <button class="btn btn-primary" type="submit">Edit Campground</button>
                </div>
            </form>
        </div>
    </div>